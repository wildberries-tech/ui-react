root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace=true
insert_final_newline = true
ij_html_space_inside_empty_tag = true

[*.yaml]
indent_style = space
indent_size = 2

[node_modules/**]
indent_style = unset
trim_trailing_whitespace = false
insert_final_newline = unset
